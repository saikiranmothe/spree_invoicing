          <%= text_field_tag('preferences[company_zip]', Spree::Company::Config[:company_zip], :size => 40) %>
        </div>

        <div data-hook="company_phone" class="field">
          <label><%= Spree.t('company.company_phone') %></label><br>
          <%= text_field_tag('preferences[company_phone]', Spree::Company::Config[:company_phone], :size => 40) %>
        </div>

        <div data-hook="company_fax" class="field">
