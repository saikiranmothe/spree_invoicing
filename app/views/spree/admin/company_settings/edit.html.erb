          <%= text_field_tag('preferences[company_rtgscode]', Spree::Company::Config[:company_rtgscode], :size => 40) %>
        </div>



      </div>

      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button Spree.t(:update), 'icon-refresh' %>
      </div>

    </fieldset>

<% end -%>