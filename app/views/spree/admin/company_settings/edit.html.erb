          <%= text_field_tag('preferences[company_vatnumber]', Spree::Company::Config[:company_vatnumber], :size => 40) %>
        </div>

         <br>
         <h3>Company Bank Account Details</h3>
         <hr>
        <div data-hook="company_beneficiary" class="field">
          <label>Name of the Beneficiary</label><br>
          <%= text_field_tag('preferences[company_beneficiary]', Spree::Company::Config[:company_beneficiary], :size => 40) %>
        </div>

        <div data-hook="company_bankname" class="field">
          <label>Name of the Bank </label><br>
