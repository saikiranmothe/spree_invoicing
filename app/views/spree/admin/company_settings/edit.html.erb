          <%= text_field_tag('preferences[company_address_number]', Spree::Company::Config[:company_address_number], :size => 40) %>
        </div>

        <div data-hook="company_street" class="field">
          <label><%= Spree.t('company.company_street') %></label><br>
          <%= text_field_tag('preferences[company_street]', Spree::Company::Config[:company_street], :size => 40) %>
        </div>

        <div data-hook="company_city" class="field">
          <label><%= Spree.t('company.company_city') %></label><br>
          <%= text_field_tag('preferences[company_city]', Spree::Company::Config[:company_city], :size => 40) %>
        </div>

        <div data-hook="company_zip" class="field">
