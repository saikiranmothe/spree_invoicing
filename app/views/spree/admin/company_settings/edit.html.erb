<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
    <%= Spree.t('company.company_settings') %>
<% end %>

<%= form_tag(admin_company_settings_path, :method => :put) do |f| -%>

    <fieldset class="no-border-top">
        
         <h3>Company Details</h3>
         <hr>
         <br>
      <div data-hook="admin_company_settings" class="row">

        <div data-hook="company_name" class="field">
          <label><%= Spree.t('company.company_name') %></label><br>
          <%= text_field_tag('preferences[company_name]', Spree::Company::Config[:company_name], :size => 40) %>
        </div>


        <div data-hook="company_slogan" class="field">
          <label><%= Spree.t('company.company_slogan') %></label><br>
          <%= text_field_tag('preferences[company_slogan]', Spree::Company::Config[:company_slogan], :size => 40) %>
        </div>

        <div data-hook="company_address_number" class="field">
